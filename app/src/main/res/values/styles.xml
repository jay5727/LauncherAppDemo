<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="CardViewStyle" parent="CardView">
        <item name="cardUseCompatPadding">true</item>
        <item name="cardCornerRadius">@dimen/space_medium_large</item>
        <item name="cardElevation">3dp</item>
    </style>

    <style name="text_style_R12_primary" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:fontFamily">@font/sf_pro_text_regular</item>
        <item name="android:textColor">@android:color/black</item>
    </style>


    <style name="text_style_B16_primary" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="android:fontFamily">@font/chronicle_display_black</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="text_style_R14_primary" parent="TextAppearance.AppCompat">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/sf_pro_text_regular</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="text_style_SB_16_primary" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="android:fontFamily">@font/sf_pro_text_semibold</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="text_style_R14_secondary_light" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:fontFamily">@font/sf_pro_text_regular</item>
        <item name="android:textColor">@color/secondaryTextLight</item>
    </style>

</resources>